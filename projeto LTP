#include <stdio.h>
int main(void) {
   int e_numero;
   printf("Entre com o valor numerico: ");
   scanf("%i", &e_numero);
   if ( e_numero == 0 ){
         printf("Voce digitou o numero:  Zero.\n");
   }
   if ( e_numero == 1 ){
         printf("Voce digitou o numero:  Um.\n");
   }
   if ( e_numero == 2 ){
         printf("Voce digitou o numero:  Dois.\n");
   }
   if ( e_numero > 2 ){
         printf("Voce digitou o numero: Maior que Dois.\n");
   }
return 0;
}
